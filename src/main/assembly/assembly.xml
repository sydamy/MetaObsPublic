<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>full-${project.os.family}</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/image</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>data</directory>
            <outputDirectory>/data</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
